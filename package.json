{
  "name": "@tophat-eslint-config/monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Top Hat's shareable eslint configuration and plugins",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "workspaces": [
    "plugins/*",
    "config",
    "eslint-import-resolver-require"
  ],
  "repository": "git@github.com:tophat/eslint-config.git",
  "author": "Top Hat Monocle Corp. <opensource@tophat.com>",
  "license": "Apache-2.0",
  "scripts": {
    "test": "run build && TS_NODE_PROJECT=./tsconfig.test.json jest --config jest.config.ts",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test:ci": "run test",
    "lint:ci": "run lint",
    "build": "yarn workspaces foreach -vti run prepack",
    "contrib:add": "all-contributors add",
    "contrib:generate": "all-contributors generate",
    "contrib:check": "all-contributors check"
  },
  "devDependencies": {
    "@monodeploy/plugin-github": "^1.2.0",
    "@monodeploy/types": "^4.3.0",
    "@tanstack/eslint-plugin-query": "^4.34.1",
    "@tophat/conventional-changelog-config": "^1.0.1",
    "@tophat/eslint-config": "^8.0.1",
    "@tophat/eslint-import-resolver-require": "^0.1.5",
    "@types/eslint": "^8.44.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@typescript-eslint/utils": "^6.7.3",
    "@yarnpkg/core": "^3.5.3",
    "@yarnpkg/sdks": "^3.0.0-rc.51",
    "all-contributors-cli": "^6.26.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "monodeploy": "^4.3.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  },
  "packageManager": "yarn@3.6.3"
}
