{
  "name": "@tophat-eslint-config/monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Top Hat's shareable eslint configuration and plugins",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "workspaces": [
    "plugins/*",
    "config",
    "eslint-import-resolver-require"
  ],
  "repository": "git@github.com:tophat/eslint-config.git",
  "author": "Top Hat Monocle Corp. <opensource@tophat.com>",
  "license": "Apache-2.0",
  "scripts": {
    "test": "run build && jest --config jest.config.ts",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test:ci": "run test",
    "lint:ci": "run lint",
    "build": "yarn workspaces foreach -vti run prepack",
    "contrib:add": "all-contributors add",
    "contrib:generate": "all-contributors generate",
    "contrib:check": "all-contributors check"
  },
  "devDependencies": {
    "@monodeploy/plugin-github": "^0.10.1",
    "@monodeploy/types": "^4.0.0",
    "@tanstack/eslint-plugin-query": "^4.29.0",
    "@tophat/conventional-changelog-config": "^1.0.1",
    "@tophat/eslint-config": "workspace:*",
    "@tophat/eslint-import-resolver-require": "^0.1.3",
    "@types/eslint": "^8.37.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@typescript-eslint/utils": "^5.58.0",
    "@yarnpkg/core": "^3.5.0",
    "@yarnpkg/sdks": "^3.0.0-rc.42",
    "all-contributors-cli": "^6.24.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "monodeploy": "^3.9.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4"
  },
  "packageManager": "yarn@3.5.0"
}
